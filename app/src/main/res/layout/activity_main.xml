<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="vasu.gro.gef.grosiri.MainActivity">


    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="400sp"
        android:layout_height="170sp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/cr">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#98030000">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:text="Hello User, &#10;This is Your Virtual Fridge"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffff"
                tools:ignore="RtlSymmetry" />
        </RelativeLayout>
    </RelativeLayout>


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


        </LinearLayout>


    </ScrollView>

    <RelativeLayout
        android:id="@+id/create"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rem"
        android:layout_marginTop="25dp"
        android:background="@color/grey_bg"
        android:clickable="true"
        android:onClick="">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/idea" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="20sp"
            android:layout_toEndOf="@+id/imageView"
            android:text="Create Fridge"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:textSize="16sp"
            android:layout_toEndOf="@+id/imageView"
            android:text="Create Your Virtual Fridge" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/create"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:background="@color/grey_bg">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView8"
            android:layout_alignParentStart="true"
            android:src="@drawable/alert" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="20sp"
            android:layout_toEndOf="@+id/imageView3"
            android:text="Get Reminders"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:textSize="16sp"
            android:layout_toEndOf="@+id/imageView3"
            android:text="Get Reminders about food items" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rem"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:clickable="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/scrollView"
        android:layout_marginTop="24dp"
        android:background="@color/grey_bg">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView10"
            android:layout_alignParentStart="true"
            android:src="@drawable/ridge" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView4"
            android:text="View Fridge"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView9"
            android:textSize="16sp"
            android:layout_toEndOf="@+id/imageView4"
            android:text="See Your Virtual Fridge" />
    </RelativeLayout>



</RelativeLayout>